<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E5E0CA"
    tools:context="com.example.zgr.ilachatirlatici.Randevularim"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randevu Ekle"
        android:background="#E5E0CA"
        android:textStyle="bold"
        android:id="@+id/randevuEkleButton"
        android:layout_gravity="bottom"
        android:layout_weight="0.87"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randevularListView"
        android:layout_centerHorizontal="true"
        android:choiceMode="multipleChoice"
        android:layout_above="@+id/randevuAlButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hastaneden Randevu Al"
        android:id="@+id/randevuAlButton"
        android:background="#E5E0CA"
        android:textStyle="bold"
        android:layout_above="@+id/randevuEkleButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
