<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E5E0CA"
    tools:context="com.example.zgr.ilachatirlatici.Randevu">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randevu Bilgileri"
        android:textStyle="bold"
        android:textColor="#3B6C1B"
        android:textSize="24dp"
        android:id="@+id/randevuBilgileriTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hastaneAdiET"
        android:hint="Hastane adını giriniz.."
        android:layout_marginTop="33dp"
        android:layout_below="@+id/randevuBilgileriTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/doktorAdiET"
        android:layout_alignEnd="@+id/doktorAdiET" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randevuBolumuET"
        android:hint="Randevu bölümünüzü giriniz.."
        android:layout_below="@+id/hastaneAdiET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/hastaneAdiET"
        android:layout_alignEnd="@+id/hastaneAdiET" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/doktorAdiET"
        android:hint="Doktor adını giriniz.."
        android:layout_below="@+id/randevuBolumuET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doktorSoyadiET"
        android:hint="Doktor soyadını giriniz.."
        android:layout_below="@+id/doktorAdiET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/doktorAdiET"
        android:layout_alignEnd="@+id/doktorAdiET" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randevuTarihiET"
        android:hint="Randevu tarihini giriniz.."
        android:layout_below="@+id/doktorSoyadiET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/doktorSoyadiET"
        android:layout_alignEnd="@+id/doktorSoyadiET" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randevu Ekle"
        android:id="@+id/randevuEkleButton"
        android:layout_marginTop="105dp"
        android:layout_below="@+id/randevuTarihiET"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/randevuSaatET"
        android:hint="Randevu saatini giriniz.."
        android:layout_below="@+id/randevuTarihiET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/randevuTarihiET"
        android:layout_alignEnd="@+id/randevuTarihiET" />


</RelativeLayout>

